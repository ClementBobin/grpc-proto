# gRPC Server Configuration

# Server Port
GRPC_PORT=0.0.0.0:50051

# TLS Configuration
# Set to 'true' to enable HTTPS/TLS, 'false' for HTTP (insecure mode)
USE_TLS=false

# TLS Certificate Paths (required when USE_TLS=true)
TLS_CERT_PATH=./server.crt
TLS_KEY_PATH=./server.key
TLS_CA_PATH=./ca.crt

# Authentication Configuration
# Set to 'false' to disable authentication entirely
ENABLE_AUTH=true

# Authentication Level
# Options: 'global', 'service', 'endpoint'
# - global: Require auth for all services and endpoints
# - service: Configure auth per service
# - endpoint: Configure auth per endpoint (most flexible)
AUTH_LEVEL=endpoint

# JWT Secret for user authentication
JWT_SECRET=super-secret

# JWT Secret for service authentication
SERVICE_JWT_SECRET=service-super-secret

# Database Configuration
DATABASE_URL="file:./dev.db"
