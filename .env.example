# gRPC Server Configuration

# Server Port
GRPC_PORT=0.0.0.0:50051

# TLS Configuration
# Set to 'true' to enable HTTPS/TLS, 'false' for HTTP (insecure mode)
USE_TLS=false

# TLS Certificate Paths (required when USE_TLS=true)
TLS_CERT_PATH=./server.crt
TLS_KEY_PATH=./server.key
TLS_CA_PATH=./ca.crt

# API Key Configuration
# Number of days until API keys expire (default: 30)
# Authentication is automatically applied based on database configuration
API_KEY_EXPIRATION_DAYS=30

# Database Configuration
DATABASE_URL="file:./dev.db"
